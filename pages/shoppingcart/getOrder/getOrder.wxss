/* pages/shoppingcart/order/order.wxss */
page {
  background-color: #e8e8ed;
  min-height:100%;
}
.address{
  background-color: #ffffb3;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* height: 80px;
  line-height: 80px; */
}
.name{
  width: 15%;
  font-size: 16px;
  text-align: left;
  padding-left:10px;
}
.mes{
  width: 70%;
  font-size: 16px;
  text-align: left;
  padding:10px 0 10px 10px;
}
.area{
  font-weight: 300;
  color: #808080;
  padding-top: 5px;
}
.right{
  position: absolute;
  padding-top: 5px;
  right: 10px;
}
.hr{
  width: 100%;
  height: 15px;
}
.coupon{
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 50px;
  height: 50px;
}
.coupon_message{
  width: 85%;
  font-size: 16px;
  color:  #ff9900;
  padding-left: 10px;
}
.totalPrice_item{
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  line-height: 45px;
  height: 45px;
}
.item{
  width: 80%;
  font-size: 16px;
  padding-left: 10px;
}
.price{
  width: 20%;
  font-size: 16px;
  padding-right: 15px;
  text-align: right;
}
.line{
  border-bottom: 1px solid #ccc;
  opacity: 0.5;
  margin-left: 10px;
}
.goods_list{
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
}
.goods_list:last-child{
  margin-bottom: 50px;
}
.goods_list_img{
  width: 25%;
  padding: 10px;
}
.goods_list_mes{
  width: 55%;
  font-size:15px; 
  min-height:100%;
  margin: 10px 0px;
  position: relative; 
}
.goods_list_price{
  position: absolute;
  bottom: 0;
}
.goods_list_count{
  width: 20%;
  font-size: 16px;
  padding: 10px 15px 0 0;
  text-align: right;
}
.finish{
  display: flex;
  flex-direction: row;
  height: 50px;
  align-items: center;
  padding-left: 10px;
  position: fixed;
  bottom: 0px;
  width: 100%;
  background-color: #fff;
}
.finish_total{
  width: 30%;
  font-size: 15px;
  color: #ff0000;
}
.finish_opr{
  position: absolute;
  right: 0px;
  width: 92px;
  font-size: 15px;
  font-weight: bold;
  background-color: #FFD600;
  height: 50px;
  text-align: center;
  padding-right: 10px;
  line-height: 50px;
}