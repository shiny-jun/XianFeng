/* pages/supermarket/supermarket.wxss */
@import 'rxb.wxss';
.content{
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei";
}
.left{
  width: 25%;
  font-size: 15px;
}
.scroll-view_H{
  height: 550px;
  white-space: nowrap; 
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.scroll-view-item_H view{
  text-align: center;
  height: 47px;
  line-height: 45px;
}
.select{
  background-color: #f8f8f8;
  border-left: 5px solid #FFD600;
  font-weight: bold;
}
.normal{
  background-color: #f8f8f8;
  border-bottom: 1px solid #f2f2f2;
}
.right{
  width: 75%;
  margin: 10px;
}
.order{
  display: flex;
  flex-direction: row;
  text-align: center;
  padding-top: 3px;
  padding-bottom: 10px;
}
.order view{
  flex: 1;
  font-size: 15px;
}
.hr{
  border: 1px solid #ccc;
  opacity: 0.2;
}