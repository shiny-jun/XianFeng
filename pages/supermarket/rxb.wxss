/* pages/supermarket/rxb.wxss */
.item{
  display: flex;
  flex-direction: row;
  padding: 16px 10px;
  /* height: 80px; */
}
.icon{
  width: 40%;
}
.info{
  width: 80%;
  position: relative;
}
.name{
  white-space: pre-wrap;
  /* white-space解决了scroll-view中flex-wrap失效的问题。pre-wrap：可以清除空格和Tab，而pre-line则会留出大量空白 */
  font-size: 15px;
  text-align: left;
}
.priceInfo{
  display: flex;
  flex-direction: row;
  margin-top: 15px;
  align-items: center; 
}
.price{
  width: 80%;
  font-size: 15px;
  color: #ff0000;
  text-align: left;
}
.count{
  border:1px solid #ccc;
  border-radius: 25px;
  width: 25px;
  color: #ff0000;
  text-align: center;
  position: absolute;
  right: 10px;
}