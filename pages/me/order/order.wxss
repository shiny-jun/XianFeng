/* pages/me/order/order.wxss */

page {
  background-color: #e8e8ed;
  min-height:100%;
}

.menu {
  display: flex;
  flex-direction: row;
  width: 100%;
  border-bottom: 1px solid #f2f2f2;
  background-color: #fff;
}

.menu view {
  margin: 0 auto;
  font-size: 15px;
  text-align: center;
  height: 45px;
  line-height: 45px;
  flex: 1;
}

.select {
  color: #000;
  border-bottom: 3px solid #ffd600;
}

.default {
  color: #ccc;
  border-bottom: 3px solid #ccc;
}

.hr {
  width: 100%;
  height: 15px;
}

.order {
  background-color: #fff;
  width: 100%;
}

.head {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  height: 40px;
}

.orderNum {
  font-size: 16px;
  width: 80%;
  padding-left: 15px;
}

.trash {
  width: 20%;
  text-align: right;
  padding-top: 2px;
  padding-right: 10px;
}

.line {
  border-bottom: 1px solid #ccc;
  opacity: 0.5;
  margin-left: 15px;
}

.mes {
  display: flex;
  width: 100%;
  flex-direction: row;
  align-items: center;
  height: 100px;
}

.img {
  width: 70%;
  padding-left: 15px;
}

.mes2 {
  width: 30%;
  font-size: 16px;
  text-align: right;
  padding-right: 10px;
}
.sum{
  color: green;
}

.btn {
  width: 100%;
  height: 45px;
  line-height: 45px;
  text-align: right;
  align-items: center;
}

.btn button {
  border-color: #515151;
  color: #515151;
  margin-left: 5px;
  margin-top: 7px;
}

.btn button:last-child {
  margin-right: 10px;
}
