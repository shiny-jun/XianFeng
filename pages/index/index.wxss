/* pages/index/index.wxss */
.haibao{
  text-align: center;
  width: 100%;
}
.haibao swiper{
  height: 180px;
}
.silde-image{
  width: 100%;
  height: 180px;
}
.nav{
  display: flex;
  flex-direction: row;
  text-align: center;
}
.nav-item{
  flex: 1;
  font-size: 13px;
  padding: 20px 0;
}
.hr{
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}
.bld{
  text-align: center;
  padding: 10px;
}
.title{
  margin-top: 10px;
}
.pic{
  text-align: center;
}
.item{
  display: flex;
  flex-direction: column;
}
.status{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.type{
  width: 100%;
  text-align: center;
  font-weight: bold;
  margin: 15px 0;
}
.more{
  position: absolute;
  right: 10px;
  font-size: 13px;
}
.orders{
  display: flex;
  flex-direction: row;
  margin: 10px;
  text-align: center;
}
.scroll-view_H{
  height: 160px;
  white-space: nowrap;
  margin-left: 5px;
}
.scroll-view-item_H{
  display: inline-block;
  white-space: pre-wrap;
}
.order{
  width: 36%;
  padding: 5px;
}
.orderName{
  font-size: 13px;
  text-align: left;
}
.priceInfo{
  display: flex;
  flex-direction: row;
  margin-top: 15px;
  text-align: left;
  position: relative;
}
.count{
  border: 1px solid #ccc;
  border-radius: 25px;
  width: 25px;
  color: #ff0000;
  text-align: center;
  position: absolute;
  right: 10px;
}